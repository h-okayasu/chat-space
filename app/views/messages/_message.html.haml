.messages
  .messages__member
    = message.user.name
  .messages__date
    = message.created_at.strftime("%Y/%m/%d %H:%M")
  .messages__comments
    - if message.body.present?
      %p.messages__comments--text
        = message.body
    = image_tag message.image.url, class: 'comments__image' if message.image.present?
